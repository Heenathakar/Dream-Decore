        <!-- JAVASCRIPT -->
        <script>
            // Mobile Menu Toggle
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const navMenu = document.getElementById('navMenu');

            if (mobileMenuBtn && navMenu) {
                mobileMenuBtn.addEventListener('click', function() {
                    navMenu.classList.toggle('active');
                    mobileMenuBtn.innerHTML = navMenu.classList.contains('active') 
                        ? '<i class="fas fa-times"></i>' 
                        : '<i class="fas fa-bars"></i>';
                });

                // Close mobile menu when clicking on a link
                const navLinks = document.querySelectorAll('.nav-menu a');
                navLinks.forEach(link => {
                    link.addEventListener('click', function() {
                        if (window.innerWidth <= 768) {
                            navMenu.classList.remove('active');
                            mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
                        }
                    });
            });
            }

            // Header scroll effect
            window.addEventListener("scroll", function() {
                const header = document.querySelector(".main-header");
                if (header) {
                    if (window.scrollY > 80) {
                        header.classList.add("scrolled");
                    } else {
                        header.classList.remove("scrolled");
                    }
                }
            });

            // Close all dropdowns function
            function closeAllDropdowns() {
                const packagesDropdown = document.getElementById('packagesDropdown');
                const userDropdown = document.getElementById('userDropdown');
                
                if (packagesDropdown) packagesDropdown.style.display = 'none';
                if (userDropdown) userDropdown.style.display = 'none';
            }

            // Toggle Packages Dropdown
            function togglePackagesDropdown(event) {
                event.preventDefault();
                event.stopPropagation();
                
                const dropdown = document.getElementById('packagesDropdown');
                const isVisible = dropdown.style.display === 'block';
                
                // Close all dropdowns first
                closeAllDropdowns();
                
                // Toggle current dropdown
                dropdown.style.display = isVisible ? 'none' : 'block';
            }

            // Toggle User Dropdown
            function toggleUserDropdown(event) {
                event.preventDefault();
                event.stopPropagation();
                
                const dropdown = document.getElementById('userDropdown');
                const isVisible = dropdown.style.display === 'block';
                
                // Close all dropdowns first
                closeAllDropdowns();
                
                // Toggle current dropdown
                dropdown.style.display = isVisible ? 'none' : 'block';
            }

            // Close dropdowns when clicking outside
            document.addEventListener('click', function(event) {
                const packagesBtn = document.querySelector('.nav-dropdown .drop-btn');
                const userBtn = document.querySelector('.user-btn');
                const packagesDropdown = document.getElementById('packagesDropdown');
                const userDropdown = document.getElementById('userDropdown');
                
                if (packagesBtn && !packagesBtn.contains(event.target) && packagesDropdown) {
                    packagesDropdown.style.display = 'none';
                }
                
                if (userBtn && !userBtn.contains(event.target) && userDropdown) {
                    userDropdown.style.display = 'none';
                }
            });

            // Prevent default on dropdown buttons
            document.querySelectorAll('.drop-btn, .user-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                });
            });
        </script>
    </form>
</body>
</html>